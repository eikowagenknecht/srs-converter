{
  "name": "srs-converter",
  "version": "0.2.1",
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "lefthook",
      "protobufjs",
      "unrs-resolver",
      "esbuild"
    ]
  },
  "description": "A library for converting between different spaced repetition system formats",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "license": "MIT",
  "author": "Eiko Wagenknecht <git@eiko-wagenknecht.de> (https://eikowagenknecht.de)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eikowagenknecht/srs-converter.git"
  },
  "bugs": {
    "url": "https://github.com/eikowagenknecht/srs-converter/issues"
  },
  "homepage": "https://github.com/eikowagenknecht/srs-converter#readme",
  "keywords": [
    "srs",
    "spaced-repetition",
    "flashcards",
    "converter",
    "anki",
    "apkg",
    "typescript"
  ],
  "files": [
    "dist/",
    "!dist/**/*.test.*",
    "!dist/docs/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "pnpm dlx rimraf dist && tsc --project tsconfig.build.json",
    "format": "prettier --write ./src ./docs && biome format --write ./src ./docs",
    "lint": "pnpm type-check && pnpm lint:eslint && pnpm lint:prettier && pnpm lint:biome",
    "lint:biome": "biome check --write ./src ./docs",
    "lint:eslint": "eslint --fix ./src ./docs",
    "lint:prettier": "prettier --write ./src ./docs",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "clean:npm": "pnpm dlx rimraf -rf node_modules",
    "sync:npm": "pnpm i --frozen-lockfile",
    "upgrade:npm": "pnpm dlx rimraf pnpm-lock.yaml && pnpm up --latest && pnpm i",
    "release:patch": "npm version patch && pnpm publish && git push --follow-tags",
    "release:minor": "npm version minor && pnpm publish && git push --follow-tags",
    "release:major": "npm version major && pnpm publish && git push --follow-tags"
  },
  "dependencies": {
    "archiver": "7.0.1",
    "kysely": "0.28.7",
    "kysely-wasm": "1.2.1",
    "protobufjs": "7.5.4",
    "sql.js": "1.13.0",
    "unzipper": "0.12.3",
    "uuid": "13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@commitlint/types": "19.8.1",
    "@eslint/js": "9.36.0",
    "@types/archiver": "6.0.3",
    "@types/node": "24.5.2",
    "@types/sql.js": "1.4.9",
    "@types/unzipper": "0.10.11",
    "@types/uuid": "11.0.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.36.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-jsdoc": "54.1.1",
    "globals": "16.4.0",
    "lefthook": "1.13.2",
    "prettier": "3.6.2",
    "typescript": "5.9.2",
    "typescript-eslint": "8.44.1",
    "vitest": "3.2.4"
  }
}
